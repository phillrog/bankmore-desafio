@page
@model BankMore.Services.Api.Identidade.Pages.Login.Index

<div class="container main-login-container">
    <div class="row w-100 m-0">

        <div class="col-lg-6 d-none d-lg-block branding-panel">
            <div class="hero-personnalite__texts">
                <h1>BankMore Acesso Seguro</h1>
                <p>
                    A melhor experiência digital e humana. Acesse sua conta com total
                    confiança e controle seus investimentos.
                </p>
            </div>
            
            <div class="mt-5">
                <h3 class="mt-4">Nossos Benefícios</h3>
                <ul class="list-unstyled mt-3 small">
                    <li>✔️ Proteção antifraude 24 horas.</li>
                    <li>✔️ Zero burocracia, 100% digital.</li>
                    <li>✔️ Suporte especializado via Chat/WhatsApp.</li>
                </ul>
            </div>      
            
            <img src="/images/lp-personalite.jpeg" alt="BankMore Personnalite Image" class="side-image">
        </div>
       
        <div class="col-lg-6 col-12 login-form-panel">

            <div class="lead mb-4">
                <h1 class="h2">Acesso à Conta</h1>
                <p class="text-muted">Informe seus dados ou crie uma conta.</p>
            </div>

            <partial name="_ValidationSummary" />

            @if (Model.View.EnableLocalLogin)
            {
                <div class="tab-panel-bank">

                    <ul class="nav nav-pills nav-fill mb-4" id="pills-tab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="pills-login-tab" data-toggle="pill" href="#pills-login" role="tab" aria-controls="pills-login" aria-selected="true">
                                Entrar
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="pills-register-tab" data-toggle="pill" href="#pills-register" role="tab" aria-controls="pills-register" aria-selected="false">
                                Abrir Conta
                            </a>
                        </li>
                    </ul>

                    <div class="card">
                        <div class="card-body">
                            <div class="tab-content" id="pills-tabContent">

                                <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="pills-login-tab">
                                    <form id="frmLogin" asp-page="/Account/Login/Index">
                                        <input type="hidden" asp-for="Input.ReturnUrl" />

                                        <div class="form-group">
                                            <label asp-for="Input.Username">Usuário</label>
                                            <input class="form-control" placeholder="Informe seu CPF" asp-for="Input.Username" autofocus required
                                            type="tel" id="cpfLogin" maxlength="11"pattern="[0-9]{11}" inputmode="numeric" >
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Input.Password">Senha</label>
                                            <input type="password" class="form-control" placeholder="Sua senha de acesso" asp-for="Input.Password" autocomplete="off" required>
                                        </div>

                                        @if (Model.View.AllowRememberLogin)
                                        {
                                            <div class="form-group">
                                                <div class="form-check">
                                                    <input class="form-check-input" asp-for="Input.RememberLogin">
                                                    <label class="form-check-label" asp-for="Input.RememberLogin">Lembrar-me</label>
                                                </div>
                                            </div>
                                        }

                                        <button class="btn btn-primary btn-block"
                                                name="Input.Button"
                                                value="login"
                                                id="loginButton">

                                            <span class="spinner-border spinner-border-sm d-none"
                                                  role="status"
                                                  aria-hidden="true"
                                                  id="spinner"></span>

                                            <span id="buttonText">Acessar Conta</span>
                                        </button>
                                        <small class="form-text text-center mt-3">
                                            <a href="#" class="text-secondary">Esqueci minha senha</a>
                                        </small>
                                    </form>
                                </div>
                                <div class="tab-pane fade" id="pills-register" role="tabpanel" aria-labelledby="pills-register-tab">
                                    <form id="frmNovoCadastro" method="POST" asp-page="/Account/Register/Index">
                                        <input type="hidden" asp-for="Input.ReturnUrl" />

                                        <div class="form-group">
                                            <label for="Input.Cpf">Informe seu CPF</label>
                                            <input class="form-control" id="cpfCadastro" name="Input.Cpf" placeholder="Digite seu CPF" required
                                                   type="tel" maxlength="11" pattern="[0-9]{11}" inputmode="numeric">
                                        </div>
                                        <div class="form-group">
                                            <label for="Input.Nome">Informe seu nome completo</label>
                                            <input class="form-control" id="Input.Nome" name="Input.Nome" placeholder="Digite seu nome" required>
                                        </div>

                                        <div class="form-group">
                                            <label for="Input.Password">Defina uma Senha</label>
                                            <div class="input-group">
                                                <input type="password"
                                                       class="form-control"
                                                       id="Input.Password"
                                                       name="Input.Password"
                                                       placeholder="Sua nova senha"
                                                       required>
                                                <div class="input-group-append">
                                                    <span class="input-group-text toggle-password" data-target="Input\.Password">
                                                        <i class="glyphicon glyphicon-eye-close" id="icon_Input.Password"></i>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="Input.ConfirmPassword">Confirme a Senha</label>
                                            <div class="input-group">
                                                <input type="password"
                                                       class="form-control"
                                                       id="Input.ConfirmPassword"
                                                       name="Input.ConfirmPassword"
                                                       placeholder="Confirme a senha"
                                                       required>
                                                <div class="input-group-append">
                                                    <span class="input-group-text toggle-password" data-target="Input\.ConfirmPassword">
                                                        <i class="glyphicon glyphicon-eye-close" id="icon_Input.ConfirmPassword"></i>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="mt-4">
                                            <button class="btn btn-primary btn-block"
                                                    name="Input.Button"
                                                    value="register"
                                                    id="registerButton">

                                                <span class="spinner-border spinner-border-sm d-none"
                                                      role="status"
                                                      aria-hidden="true"
                                                      id="spinner"></span>

                                                <span id="buttonText">Criar Minha Conta</span>
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            @if (Model.View.VisibleExternalProviders.Any())
            {
                <div class="mt-4 pt-3 border-top">
                    <p class="text-center text-muted small">Ou entre com sua conta:</p>
                    <ul class="list-inline text-center">
                        @foreach (var provider in Model.View.VisibleExternalProviders)
                        {
                            <li class="list-inline-item mb-2">
                                <a class="btn btn-secondary btn-block"
                                   asp-page="/ExternalLogin/Challenge"
                                   asp-route-scheme="@provider.AuthenticationScheme"
                                   asp-route-returnUrl="@Model.Input.ReturnUrl">
                                    @provider.DisplayName
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            }

            @if (!Model.View.EnableLocalLogin && !Model.View.VisibleExternalProviders.Any())
            {
                <div class="alert alert-warning text-center">
                    <strong>Solicitação de login inválida</strong>
                    Nenhuma forma de login configurada.
                </div>
            }
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            var passwordInput = $('#frmNovoCadastro').find('#Input\\.Password');
            var confirmPasswordInput = $('#frmNovoCadastro').find('#Input\\.ConfirmPassword');

            spinnerButton('#frmLogin');
            spinnerButton('#frmNovoCadastro',()=>{
                var password = passwordInput.val();
                var confirmPassword = confirmPasswordInput.val();

                if (!password || !confirmPassword) {
                    return;
                }
                if (password !== confirmPassword) {

                    event.preventDefault();
                    if (typeof toastr !== 'undefined') {
                        toastr.error('As senhas digitadas não coincidem. Por favor, verifique e tente novamente.', 'Erro de Senha');
                    } else {
                        alert('Erro: As senhas não coincidem.');
                    }

                    confirmPasswordInput.val('');
                    confirmPasswordInput.focus();

                    return false;
                }
                return true;
            });

            passwordInput.on('blur', (e)=>{
                if (passwordInput.val().length > 0){
                    passwordInput.addClass('is-valid');
                } else{
                    passwordInput.removeClass('is-invalid');
                }
            })
            confirmPasswordInput.on('keyup', function() {
                if (passwordInput.val() !== confirmPasswordInput.val()) {
                    confirmPasswordInput.addClass('is-invalid');
                } else {
                    confirmPasswordInput.removeClass('is-invalid');
                    confirmPasswordInput.addClass('is-valid');
                }
            });

        
            formatarCpf('#cpfLogin');
            formatarCpf('#cpfCadastro');

            $('.toggle-password').on('click', function() {

                var targetId = $(this).data('target');
                var passwordInput = $('#' + targetId);
                var icon = $('#icon_' + targetId);

                var currentType = passwordInput.attr('type');

                if (currentType === 'password') {
                    passwordInput.attr('type', 'text');
                    icon.removeClass('glyphicon-eye-close').addClass('glyphicon-eye-open');
                } else {
                    passwordInput.attr('type', 'password');
                    icon.removeClass('glyphicon-eye-open').addClass('glyphicon-eye-close');
                }
            });
        });


        function formatarCpf(input){
            var cpfInput = $(input);

            cpfInput.on('keypress', function (event) {

                var charCode = (event.which) ? event.which : event.keyCode;
                if (charCode > 31 && (charCode < 48 || charCode > 57)) {
                    event.preventDefault();
                }
            });

            cpfInput.on('paste', function (event) {
                var pastedData = event.originalEvent.clipboardData.getData('text');

                var cleanData = pastedData.replace(/[^0-9]/g, '');
                var finalData = cleanData.substring(0, 11);
                $(this).val(finalData);
                event.preventDefault();
            });
        }

        function spinnerButton(form, validation){
            var button = $(form).find('button');
            var spinner = $(form).find('#spinner');
            var buttonText = $(form).find('#buttonText');
            $(form).on('submit', function (event) {
                if (validation && !validation()){
                    return;
                }

                // Verifica se o formulário já está sendo processado (previne cliques duplos)
                if (button.prop('disabled')) {
                    event.preventDefault();
                    return;
                }

                // 2. Desabilita o botão para impedir mais cliques
                button.prop('disabled', true);

                // 3. Exibe o loader e altera o texto
                spinner.removeClass('d-none');
                buttonText.text('Processando...');
            });
        }
    </script>
}